#media-list
  .audio-list
    height 300px
    background: #fff
    display: flex
    flex-flow: column
    >div
      display: flex
      >div
        line-height: 20px
        &:first-child
          flex: 1
          text-align: center
        &:last-child
          flex: 3
    .header
      height 20px
      background: #222
      color: #fff
      border-bottom: 1px solid #CCC
      .tags + div
        margin-left: 32px
    .body
      flex 1
      .tags
        border-right: 1px solid #CCC
        >div
          position: relative
          &:hover
            background: #ddd
            color: #000
          >input 
            width: 100%
            height 100%
            left 0
            border-top:1px solid #ccc
            border-bottom:1px solid #ccc
            position: absolute
            text-align: center
            box-sizing: border-box
            &:focus
              outline: none
      .tags + div
        overflow-y: scroll
        >div
          display: flex
          padding: 0px 8px
          align-items: center
          position relative
          &:nth-child(2n)
            background: #eee
          &:hover
            background: #ddd
          .icon
            width: 8px
            border 5px solid #000
            border-width: 5px 0px 5px 5px
            border-color: transparent transparent transparent transparent
            background: transparent
          .icon.active
            border-color: transparent transparent transparent #000
          .title
            overflow hidden
            text-overflow:ellipsis
            white-space: nowrap;
            flex: 1
          .duration
            width 30px
          >input 
            width 100%
            position: absolute
            left 0
            opacity 0
            &:focus
              outline: none
          
  .video-list
    height 300px
    background: #0f0

.context-menu
  width 120px
  position: absolute
  background: #ffffff
  padding: 8px 0px
  border: 1px solid #ddd
  >div
    line-height: 20px
  >button 
    width: 100%
    height 20px
    text-align: left
    padding: 0px 8px
    background: #fff
    &:hover
      background: #EEE
    &:focus
      outline: none
