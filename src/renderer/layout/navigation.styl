#navigation
  display: flex
  align-items: center
  background: #ffffff
  height 20px
  justify-content: space-between
  >div
    display: flex
    height 100%
    >div
      line-height: 20px
  .list-operating
    >div
      padding: 0px 8px
      margin-right: 2px
    .add
      position relative
      .add-menu
        width 160px
        position: absolute
        left 0
        padding: 4px 8px
        line-height: 24px
        border: 1px solid #ccc
        border-left: 0px
        background: #fff
        color: #000
        z-index: 1
        >div
          position relative
          >input 
            width 100%
            height 100%
            position: absolute
            top: 0
            left 0
            opacity 0

  .media-mode
    >div
      padding: 0px 8px
      margin-left: 2px

.active
  background: #222
  color: #fff