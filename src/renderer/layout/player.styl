// 播放器视图样式
#player
  .player-view
    height 140px
    background: url('../assets/audio.png')
    &:hover .media-info
      opacity 1
    .media-info
      opacity 0
      transition: .5s
      color: #fff
      padding: 8px
      background linear-gradient(#000C, #0000)
      >div
        overflow hidden
        text-overflow:ellipsis
        white-space: nowrap;
        line-height: 16px
        text-shadow: 0px 0px 2px #000

// 播放器时间轴样式
#player
  .time-bar
    height 20px
    background: #fff
    display: flex
    align-items: center
    padding: 0px 8px
    .time-control
      flex: 1
      height 100%
      padding: 0px 8px

// 播放器控制器样式
#player
  .player-control
    display: flex
    height 40px
    padding: 0px 8px
    border-top: 1px solid #CCC
    border-bottom: 1px solid #CCC
    >div
      width: 80px
      display: flex
      align-items: center
    .mode, .volume
      >div
        width 16px
        height 16px
        // background: #0f0
    .mode
      >div
        margin-right: 8px
    .volume
      justify-content: flex-end
      >div
        margin-left: 8px
      .volume-control
        width 40px
    .control
      flex: 1
      justify-content: space-around
      background: #f00
      >div
        width 24px
        height 24px
        border-radius: 50%
        background: #aaa
        &:nth-child(2)
          width 30px
          height 30px

// 控制条公共样式
.control-progress
  display: flex
  align-items: center
  .progress
    width 100%
    height 4px
    border-radius: 2px
    background: #cccccc
    >div
      width 0%
      // transition: .25s
      height 4px
      background: #333
      border-radius: 2px
      display: flex
      align-items: center
      position relative
      >div
        width 4px
        height 4px
        background: #fff
        border 4px solid #333
        border-radius: 50%
        right -6px
        position: absolute

  